      { url: "./assets/images/2.jpg", srcset: "./assets/images/2@2x.jpg 2x", alt: "фото работы" },
      { url: "./assets/images/3.jpg", srcset: "./assets/images/3@2x.jpg 2x", alt: "фото работы" },
      { url: "./assets/images/4.jpg", srcset: "./assets/images/4@2x.jpg 2x", alt: "фото работы" },
